@using EPiServer.Web.Mvc.Html
@model OptimizelyTask.Models.OfferBlock

<article class="d-inline border border-black border-3 rounded-4 p-5 d-flex justify-content-between main-offer">
    <span>
        <h2>@Html.PropertyFor(x => x.Title)</h2>
        <section class="pt-5">
            @if(Model != null && Model.Benefits.Any())
            {
                <ul class="list-inline">
                    @foreach(var benefit in Model.Benefits)
                    {
                        <li class="d-block">
                            <img src="svg/check2.svg" class="d-inline bi-check" style="transform: scale(1.8);" />
                            <div class="d-inline p-3 text-break">@benefit</div>
                        </li>
                    }
                </ul>
            }
        </section>
    </span>
    
    <div class=>
        <p class="h1 fw-bold text-end mb-0">@Html.PropertyFor(x => x.Price) kr.<div>
        <div>@Html.PropertyFor(x => x.PriceDescription)</div>
    </div>
</article>

<script>
    $(window).on('load', function(){
        var price = parseInt(@Html.PropertyFor(x => x.Price));
        $("#totalPerItem").text(price);
    })
</script>